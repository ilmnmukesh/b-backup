<script>
    const socket = io();
    $(document).ready(() => {
        let val = parseInt(
            "<%= typeof alert_count=='undefined'?0:alert_count %>",
        );
        if (val > 0) {
            $(".alert_order_count, #alert_tracking_icon").removeClass("d-none");
            $(".alert_order_count").html(val);
        } else {
            $(".alert_order_count, #alert_tracking_icon").addClass("d-none");
        }
    });
    socket.on("alert_shop_<%= shopId %>", ({ display, alert }) => {
        console.log(display, alert);

        if (display && alert > 0) {
            $("#bell_sound")[0].pause();
            $("#bell_sound")[0].play();
            $(".alert_order_count, #alert_tracking_icon").removeClass("d-none");
            $(".alert_order_count").html(alert);
        } else {
            $(".alert_order_count, #alert_tracking_icon").addClass("d-none");
        }
    });
</script>
