<% data.forEach((obj)=>{%>
<div class="card">
    <div class="card-content">
        <div class="float-left col-3">
            <img
                height="150"
                class="ml-4"
                src="<%= obj.image %>"
                alt="Card image cap"
            />
        </div>

        <div class="card-body">
            <h4
                class="card-title"
                style="
                    overflow: hidden;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 1;
                    -webkit-box-orient: vertical;
                "
            >
                <%= obj.name%>
            </h4>
            <p
                class="card-text ellipsis"
                style="
                    color: #434e5b;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    min-height: 44px;
                    -webkit-box-orient: vertical;
                "
            >
                <code style="color: #434e5b !important"
                    ><%= obj.description %></code
                >
            </p>
            <small class="text-muted">
                <span
                    title="Click this to filter this category"
                    onclick="addCategory('<%=obj.category?.name%>')"
                    class="badge border-primary border text-primary shadow"
                >
                    <%=obj.category?.name %>
                </span>
                <span
                    title="Click this to filter this brand"
                    onclick="addBrand('<%=obj.brand?.name%>')"
                    class="badge border-primary border text-primary shadow"
                >
                    <%=obj.brand?.name %>
                </span>
            </small>

            <button
                onclick='addProductToPost(
                        btoa("<%= obj.id%>"), 
                        btoa("<%= obj.name%>"),
                        btoa("<%= obj.image %>"),
                        btoa("<%= obj.description %>"), 
                        btoa("<%=obj.category?.name%>"), 
                        btoa("<%=obj.brand?.name %>"))'
                class="btn btn-sm round btn-outline-light border-0 float-right"
            >
                <i class="fa fa-plus text-warning mb-1"></i>
                Add
            </button>
        </div>
    </div>
</div>
<% })%>
